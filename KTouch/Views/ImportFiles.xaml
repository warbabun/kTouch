<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		xmlns:s="http://schemas.microsoft.com/surface/2008"
		xmlns:p="clr-namespace:KTouch.Properties"
		x:Class="KTouch.ImportFiles"
		Background="{StaticResource browserBackground}"
		mc:Ignorable="d" 
		d:DesignHeight="1080" 
		d:DesignWidth="1920">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="2*"/>
		</Grid.RowDefinitions>

		<s:SurfaceListBox Grid.Row="0" Height="250" Style="{StaticResource ButtonBoxStyle}">
            <s:SurfaceListBoxItem Content="{x:Static p:Resources.LblDirectory}" ToolTip="{x:Static p:Resources.TlpDirectory}"/>
            <s:SurfaceListBoxItem Content="{x:Static p:Resources.LblTransfer}" ToolTip="{x:Static p:Resources.TlpTransfer}"/>
		</s:SurfaceListBox>
		
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<s:SurfaceListBox Name="LbxSource" Grid.Column="0" Style="{StaticResource ListBoxStyle}" ItemsSource="{Binding SourceCollection}" />
			<s:SurfaceListBox Name="LbxResultat" Grid.Column="1" Style="{StaticResource ListBoxStyle}" ItemsSource="{Binding ResultCollection}"/>
		</Grid>
	</Grid>
</Page>
