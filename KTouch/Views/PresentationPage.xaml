<Page x:Class="KTouch.Views.PresentationPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:Surface="http://schemas.microsoft.com/surface/2008" 
	  xmlns:Controls="clr-namespace:KTouch.Controls;assembly=KTouch.Controls"
	  xmlns:b="clr-namespace:KTouch"
	  mc:Ignorable="d" 
	  d:DesignHeight="1080" 
	  d:DesignWidth="1920"
	  Title="PresentationPage"
	  Background="Transparent">
	
	<Grid Name="LayoutRoot" ClipToBounds="False">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="100" />
		</Grid.RowDefinitions>
		<Controls:KTouchXpsViewer x:Name="viewer" 
									  Document="{Binding LastItem.FullName}"
									  Grid.Row="0"
									  Margin="25,10,25,10"
									 />

        <Surface:SurfaceListBox x:Name="xpsListBox" 
									Style="{StaticResource OverlayListBoxStyle}"
									SelectedItem="{Binding Item}"
									ItemsSource="{Binding ItemList}" 
									Grid.Row="1"
									Visibility="{Binding Path=OverlayVisibility}"/>
        <!--<Grid Name="GridOverlay" Grid.RowSpan="3" Grid.ColumnSpan="3">
			
			<Grid.RowDefinitions>
				<RowDefinition Height="830*" />
				<RowDefinition Height="220*"/>
				<RowDefinition Height="30*" />
			</Grid.RowDefinitions>

			
		</Grid>-->
	</Grid>

</Page>
