<Application x:Class="KTouch.App" 
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:system="clr-namespace:System;assembly=mscorlib"
			 xmlns:local="clr-namespace:KTouch.Utilities"
			 StartupUri="Browser.xaml">
	<Application.Resources>
		<ResourceDictionary>		   
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/KTouch;component/Resources/Storyboards.xaml"/>
				<ResourceDictionary Source="/KTouch;component/Resources/Styles.xaml"/>
				<ResourceDictionary Source="/KTouch;component/Resources/Brushes.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			<ObjectDataProvider ObjectType="{x:Type local:Loader}" x:Key="loader">
				<ObjectDataProvider.ConstructorParameters>
                    <system:String>C:\Content</system:String>
				</ObjectDataProvider.ConstructorParameters>
			</ObjectDataProvider>
		</ResourceDictionary>
	</Application.Resources>
</Application>